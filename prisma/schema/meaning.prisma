model word_kanji {
  id               Int            @id @default(autoincrement())
  japanese_word_id Int
  kanji_id         Int
  created_at       DateTime       @default(now())
  updated_at       DateTime?
  japanese_words   japanese_words @relation(fields: [japanese_word_id], references: [id])
  kanji            kanji          @relation(fields: [kanji_id], references: [id])

  @@unique([japanese_word_id, kanji_id])
}

model jp_th_meanings {
  id               Int            @id @default(autoincrement())
  japanese_word_id Int
  thai_word_id     Int
  explanation      String?
  created_at       DateTime       @default(now())
  updated_at       DateTime?
  japanese_word    japanese_words @relation(fields: [japanese_word_id], references: [id])
  thai_word        thai_words     @relation(fields: [thai_word_id], references: [id])

  @@unique([japanese_word_id, thai_word_id])
}

